<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".workerRegister.WorkerRegisterActivity2">

    <cn.usmaker.merchant.components.HMActionBar
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </cn.usmaker.merchant.components.HMActionBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="请填入您的真实姓名"
            android:textColor="@color/dark"
            android:textSize="17sp"/>

        <EditText
            android:id="@+id/edt_store_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/base_padding"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="您的姓名"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="16sp">
        </EditText>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:background="@color/darkgrey"
        android:paddingRight="@dimen/base_padding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="请选择工种"
            android:textColor="@color/dark"
            android:textSize="17sp"/>

        <EditText
            android:id="@+id/edt_manage_kinds"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/base_padding"
            android:layout_weight="10"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_manage_choice"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/base_padding"
            android:background="@null"
            android:drawableRight="@drawable/card_right_arrow"
            android:gravity="right|center_vertical"
            android:singleLine="true"
            android:text="请选择"
            android:textSize="16sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:background="@color/darkgrey"
        android:paddingRight="@dimen/base_padding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="联系电话"
            android:textColor="@color/dark"
            android:textSize="17sp"/>

        <EditText
            android:id="@+id/edt_phone_number"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/base_padding"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="13863984877"
            android:inputType="phone"
            android:singleLine="true"
            android:textSize="16sp">
        </EditText>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:background="@color/darkgrey"
        android:paddingRight="@dimen/base_padding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="其他电话"
            android:textColor="@color/dark"
            android:textSize="17sp"/>

        <EditText
            android:id="@+id/edt_telephone_number"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/base_padding"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="0531-8881264"
            android:inputType="phone"
            android:singleLine="true"
            android:textSize="16sp">
        </EditText>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:background="@color/darkgrey"
        android:paddingRight="@dimen/base_padding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="家庭住址"
            android:textColor="@color/dark"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/tv_province"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/base_padding"
            android:text="山东省"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:text="济南市"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_district"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:text="高新区"
            android:textSize="16sp"/>

        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center"-->
        <!--android:layout_marginLeft="8dp"-->
        <!--android:textSize="16sp"/>-->

        <TextView
            android:id="@+id/tv_address_choice"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/base_padding"
            android:background="@null"
            android:drawableRight="@drawable/card_right_arrow"
            android:gravity="right|center_vertical"
            android:singleLine="true"
            android:text="请选择"
            android:textSize="16sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:background="@color/darkgrey"
        android:paddingRight="@dimen/base_padding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="详细地址"
            android:textColor="@color/dark"
            android:textSize="17sp"/>

        <EditText
            android:id="@+id/edt_address_details"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/base_padding"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="经十路万科金域中心"
            android:inputType="phone"
            android:singleLine="true"
            android:textSize="16sp">
        </EditText>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/darkgrey"
        android:paddingRight="@dimen/base_padding"/>

    <Button
        android:id="@+id/btn_next_move"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_next_move"
        android:text="@string/next_move"
        android:textColor="@color/white"
        android:textSize="18sp"/>

</LinearLayout>
