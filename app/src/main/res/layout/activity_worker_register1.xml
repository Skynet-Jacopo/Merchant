<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".workerRegister.WorkerRegisterActivity1">
    <LinearLayout
        android:layout_marginTop="@dimen/base_padding"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ImageView
            android:gravity="center"
            android:id="@+id/iv_back"
            android:layout_weight="1"
            android:src="@drawable/back"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_weight="4"
            android:textSize="18sp"
            android:gravity="center"
            android:text="工人注册"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <ImageView
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="80px"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/darkgrey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/base_padding"
        android:paddingRight="@dimen/base_padding">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/icon_phone"/>

        <EditText
            android:id="@+id/edt_phone_number"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/base_padding"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:singleLine="true">
            <requestFocus/>
        </EditText>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/darkgrey"
        android:paddingRight="@dimen/base_padding"/>

    <LinearLayout
        android:paddingLeft="@dimen/base_padding"
        android:paddingRight="@dimen/base_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/icon_phone"/>
        <EditText
            android:hint="请输入验证码"
            android:layout_marginLeft="@dimen/base_padding"
            android:id="@+id/edt_auth_code"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:background="@null"
            android:singleLine="true"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/darkgrey"
            android:paddingRight="@dimen/base_padding"/>
        <TextView
            android:gravity="center"
            android:id="@+id/btn_get_auth_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/get_auth_code"
            android:textColor="@color/f850_default_blue"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/darkgrey"
        android:paddingRight="@dimen/base_padding"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/base_padding"
        android:paddingRight="@dimen/base_padding">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/icon_phone"/>

        <EditText
            android:id="@+id/edt_pass_word"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/base_padding"
            android:background="@null"
            android:hint="请输入6-20位密码"
            android:inputType="textPassword"
            android:singleLine="true"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/darkgrey"
        android:paddingRight="@dimen/base_padding"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/base_padding"
        android:paddingRight="@dimen/base_padding">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/icon_phone"/>

        <EditText
            android:id="@+id/edt_pass_word_again"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/base_padding"
            android:background="@null"
            android:hint="请确认你的密码"
            android:inputType="textPassword"
            android:singleLine="true"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/darkgrey"
        android:paddingRight="@dimen/base_padding"/>
    <Button
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/btn_next_move"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_next_move"
        android:text="@string/next_move"
        android:textColor="@color/white"
        android:textSize="18sp"/>
    <TextView
        android:layout_marginRight="20dp"
        android:textSize="10sp"
        android:layout_gravity="right|center"
        android:layout_marginTop="@dimen/base_padding"
        android:text="注册即代表同意《杂品行服务协议》"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
